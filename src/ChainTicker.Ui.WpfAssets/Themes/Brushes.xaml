<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:themes="clr-namespace:ChainTicker.Ui.WpfAssets.Themes">

    <ResourceDictionary.MergedDictionaries>
        <themes:SharedResourceDictionary Source="{StaticResource {x:Static themes:AppTheme.ColoursSourceKey}}" />
    </ResourceDictionary.MergedDictionaries>


    <SolidColorBrush x:Key="{x:Static themes:Keys.PriceDirectionDownBrush}" Color="{StaticResource {x:Static themes:Keys.PriceDirectionDownColour}}" />
    <SolidColorBrush x:Key="{x:Static themes:Keys.PriceDirectionUpBrush}" Color="{StaticResource {x:Static themes:Keys.PriceDirectionUpColour}}" />



</ResourceDictionary>