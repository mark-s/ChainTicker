<Window
    x:Class="ChainTicker.Shell.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:ChainTicker.Shell.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:ChainTicker.Shell.ViewModels"
    Title="ChainTicker"
    Width="1152.127"
    Height="726"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False,
                                     Type={x:Type viewModels:MainWindowViewModel}}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <Grid>

        <Button
            Width="191"
            Margin="26,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding Exchanges[0].GetMarketsCommand}"
            Content="Get Markets" />


        <ItemsControl
            Width="1124"
            Height="56"
            Margin="10,548,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{StaticResource ExhangeWithMarketsTemplate}"
            ItemsSource="{Binding Exchanges}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

        </ItemsControl>

        <Controls:MarketsSelector
            Width="161"
            Height="469"
            Margin="26,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DataContext="{Binding Exchanges[0]}" />

        <Controls:MarketsSelector
            Width="161"
            Height="469"
            Margin="270,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DataContext="{Binding Exchanges[1]}" />
        <Button
            Width="191"
            Margin="270,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding Exchanges[1].GetMarketsCommand}"
            Content="Get Markets" />

    </Grid>


</Window>







