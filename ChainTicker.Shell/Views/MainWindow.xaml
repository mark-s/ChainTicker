<Window
    x:Class="ChainTicker.Shell.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ChainTicker.Shell.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:ChainTicker.Shell.ViewModels"
    Title="ChainTicker"
    Width="776.127"
    Height="447"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel,
                                     IsDesignTimeCreatable=False}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>

        <Button
            Width="191"
            Margin="26,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding TheExchange.GetMarketsCommand}"
            Content="Get Markets" />

        <ListBox
            Width="191"
            Height="371"
            Margin="26,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding TheExchange.Markets}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding DisplayName}" />
                        <Button Command="{Binding SubscribeCommand}" Content="SUB" />
                        <Button Command="{Binding UnsubscribeCommand}" Content="UNSUB" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock
            Margin="263,118,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.Name}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="504,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.Description}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="424,17,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.HomePage}"
            TextWrapping="Wrap" />

        <ItemsControl
            Width="394"
            Height="30"
            Margin="244,193,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding TheExchange.Markets}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>


                <DataTemplate>

                    <StackPanel Orientation="Horizontal" Visibility="{Binding Path=IsSubscribed, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="{Binding DisplayName}" />
                        <TextBlock Text="   " />
                        <TextBlock Name="priceText" Text="{Binding CurrentTick.Price}">
                            <TextBlock.Background>
                                <SolidColorBrush Color="White" />
                            </TextBlock.Background>
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="Black" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock Text="   " />
                        <TextBlock Text="{Binding CurrentTick.PriceDirection}" />


                    </StackPanel>

                    <DataTemplate.Triggers>

                        <DataTrigger Binding="{Binding CurrentTick.PriceDirection}" Value="{x:Static models:PriceDirection.Up}">
                            <DataTrigger.EnterActions>
                                <StopStoryboard BeginStoryboardName="bidUpStoryboard" />
                                <StopStoryboard BeginStoryboardName="bidDownStoryboard" />
                                <BeginStoryboard x:Name="bidUpStoryboard">
                                    <Storyboard>
                                        <ColorAnimation
                                            AutoReverse="False"
                                            BeginTime="0:0:0"
                                            Storyboard.TargetName="priceText"
                                            Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)"
                                            To="#4E008000"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding CurrentTick.PriceDirection}" Value="{x:Static models:PriceDirection.Down}">
                            <DataTrigger.EnterActions>
                                <StopStoryboard BeginStoryboardName="bidDownStoryboard" />
                                <StopStoryboard BeginStoryboardName="bidUpStoryboard" />
                                <BeginStoryboard x:Name="bidDownStoryboard">
                                    <Storyboard>
                                        <ColorAnimation
                                            AutoReverse="False"
                                            BeginTime="0:0:0"
                                            Storyboard.TargetName="priceText"
                                            Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)"
                                            To="#4AFF0000"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                    </DataTemplate.Triggers>


                </DataTemplate>


            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>


</Window>



