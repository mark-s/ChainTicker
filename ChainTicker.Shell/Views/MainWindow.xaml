<Window
    x:Class="ChainTicker.Shell.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="ChainTicker"
    Width="776.127"
    Height="447"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:ChainTicker.Shell.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel, IsDesignTimeCreatable=False}"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>

        <Button
            Width="191"
            Margin="26,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding TheExchange.GetMarketsCommand}"
            Content="Get Markets" />

        <ListBox
            Width="191"
            Height="371"
            Margin="26,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding TheExchange.Markets}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding DisplayName}" />
                        <Button Command="{Binding SubscribeCommand}" Content="SUB" />
                        <Button Command="{Binding UnsubscribeCommand}" Content="UNSUB" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock
            Margin="263,118,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.Name}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="504,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.Description}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="424,17,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.HomePage}"
            TextWrapping="Wrap" />

        <ItemsControl
            Width="394"
            Height="30"
            Margin="344,118,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding TheExchange.Markets}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Visibility="{Binding Path=IsSubscribed, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="{Binding DisplayName}" />
                        <TextBlock Text="   " />
                        <TextBlock Text="{Binding CurrentTick.Price}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>


</Window>
