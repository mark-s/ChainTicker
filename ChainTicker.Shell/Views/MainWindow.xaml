<Window
    x:Class="ChainTicker.Shell.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="ChainTicker"
    Width="525"
    Height="350"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>

        <Button
            Width="155"
            Margin="26,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding TheExchange.GetMarketsCommand}"
            Content="Get Markets" />

        <ListBox
            Width="283"
            Height="249"
            Margin="26,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding TheExchange.Markets}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding BaseCoin.Code}" />
                        <TextBlock Text=":" />
                        <TextBlock Text="{Binding CounterCoin.Code}" />
                        <TextBlock Text=" - " />
                        <TextBlock Text="{Binding CurrentTick.Price}" />
                        <Button Command="{Binding SubscribeCommand}" Content="SUB" />
                        <Button Command="{Binding UnSubscribeCommand}" Content="UNSIB" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button
            x:Name="btnSubscribe"
            Width="75"
            Margin="26,289,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Subscribe" />

        <Button
            x:Name="button1_Copy"
            Width="75"
            Margin="106,289,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Unsubscribe" />

        <TextBlock
            Margin="350,14,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.Name}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="350,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.Description}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="350,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TheExchange.HomePage}"
            TextWrapping="Wrap" />



    </Grid>


</Window>
